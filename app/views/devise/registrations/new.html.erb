<h1 class="form__title heading semibold">
  Create an account
</h1>

<section class="scontainer-form">
<div class="form__container">
  <h2 class="content-lg  overline center-text font-form", style="margin: 24px 16px">
    Continue with
  </h2>
  <div class="github">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), style:"width: 100%", class:"button button--secondary button-sm", method: :post, data: {turbo: false} %>
        <% end %>
      <% end %>
      <h2 class="content-lg overline center-text font-form", style="margin: 24px 16px">
        Or
      </h2>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field mb-4">
    <%= f.label :username, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.text_field :username, class:"form__field", placeholder: "Example" %>
  </div>

  <div class="field mb-4">
    <%= f.label :email, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form__field", placeholder: "example@mail.com" %>
  </div>

  <div class="field mb-4">
    <%= f.label :name, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.text_field :name, class:"form__field", placeholder: "Example name" %>
  </div>

  <div class="field mb-4">
    <%= f.label :avatar, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class:"overline heading heading--xs content-sm font-form"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form__field", placeholder: "*********" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password_confirmation, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form__field", placeholder: "*********" %>
  </div>

  <div class="actions mb-4">
    <%= f.submit "Sign up", style:"width: 100%", class:"button button--primary button-sm" %>
  </div>
  <% end %>


  <div class="center-text text-gray-400">
    Already a member?<br>
    <%= render "devise/shared/links" %>
  </div>
</div>

</section>
