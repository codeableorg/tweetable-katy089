<h2 class="form__title heading semibold">Edit Profile <%#= resource_name.to_s.humanize %></h2>

<div class="form__container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field mb-4">
    <%= f.label :username, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.text_field :username, class:"form__field", placeholder: "Example" %>
  </div>
  
  <div class="field mb-4">
    <%= f.label :email, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form__field", placeholder: "Example@mail.com" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-4">
    <%= f.label :name, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.text_field :name, class:"form__field", placeholder: "Example name" %>
  </div>
  
  <div class="field mb-4">
    <%= f.label :avatar, class:"overline heading heading--xs content-sm font-form" %><br />

    <% if @user.avatar.attached? %>
      <div>
        <%= image_tag @user.avatar, alt: "Image to #{@user.name}", class: "img-user" %>
      </div>
    <% else %>
      <div>
        <%= image_tag "avatar.png", alt: "Empty image", class: "img-user" %>
      </div>
    <% end  %>

    <%= f.file_field :avatar %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class:"overline heading heading--xs content-sm font-form" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form__field", placeholder: "*********" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field mb-4">
    <%= f.label :password_confirmation, class:"overline heading heading--xs content-sm font-form" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form__field", placeholder: "*********" %>
  </div>

  <div class="field mb-4">
    <%= f.label :current_password, class:"overline heading heading--xs content-sm font-form" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form__field", placeholder: "*********" %>
  </div>

  <div class="actions mb-4">
    <%= f.submit "Update", style:"width: 100%", class:"button button--primary button-sm" %>
  </div>
<% end %>
  <div class="center-text text-gray-400">
    <%= link_to "Back", :back, class: "text-primary_darker" %>
  </div>
</div>

